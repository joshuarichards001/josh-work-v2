{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "strict",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".astro/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "copy-assets": {
      "inputs": ["../Splash/public/**"],
      "outputs": ["public/cubemap/**"]
    }
  }
}
