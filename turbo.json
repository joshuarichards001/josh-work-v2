{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "strict",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".astro/**"]
    },
    "web#build": {
      "dependsOn": ["splash#build", "test-app#build", "water-ball#build"],
      "outputs": ["dist/**", ".astro/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
